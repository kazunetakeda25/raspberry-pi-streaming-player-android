<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.rpi.streaming.streamingplayer">

    <application
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:supportsRtl="true"
            android:theme="@style/AppTheme">
        <activity android:name=".SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".ConnectedDevicesListingActivity"/>
        <activity android:name=".ScanAvailableDevicesActivity"/>
        <activity android:name=".DeviceActivePlaylistActivity"/>
        <activity android:name=".DeviceActiveSpotifyPlaylistActivity"/>
        <activity android:name=".DeviceActiveTuneInPlaylistActivity"/>
        <activity android:name=".DeviceActiveLocalPlaylistActivity"/>

        <meta-data
                android:name="com.google.android.actions"
                android:resource="@xml/menu"/>
    </application>

</manifest>